<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="Chat Client" Height="457" Width="603.5" Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="tbUserName" Height="34" Margin="244,23,36,0" TextWrapping="Wrap" Text="User name" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="bConnDicon" HorizontalAlignment="Left" Margin="46,10,0,0" VerticalAlignment="Top" Content="Connect" Width="150" Height="48" Click="Button_Click" FontSize="18"/>
        <ListBox x:Name="lbChat" Height="239" Margin="15,87,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbMessage" Height="47" Margin="15,357,10,0" TextWrapping="Wrap" VerticalAlignment="Top" KeyDown="tbMessage_KeyDown"/>
        <Label Content="Message" HorizontalAlignment="Left" Margin="46,328,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Output" HorizontalAlignment="Left" Margin="46,58,0,0" VerticalAlignment="Top" FontSize="14"/>

    </Grid>
</Window>
